# ============================================================================
# Environment Variables Template
# Assignment 2.31: Environment Variable Management
# ============================================================================
# Copy this file to .env.local and fill in actual values
# WARNING: Never commit .env.local to version control!

# ============================================================================
# DATABASE CONFIGURATION (Server-Side Only)
# ============================================================================

# PostgreSQL Database URL
# For Managed Cloud DB (RDS, Azure SQL, Neon):
# Format: postgresql://user:password@host:port/dbname?sslmode=require
# Use connection pooling URL for application logic (e.g., via Prisma Accelerate or PgBouncer)
DATABASE_URL="postgresql://user:password@host:port/dbname?sslmode=require"

# Direct Database URL (for Prisma migrations)
# Required for serverless/cloud environments to bypass connection poolers during migrations
DIRECT_DATABASE_URL="postgresql://user:password@host:port/dbname?sslmode=require"

# ============================================================================
# AUTHENTICATION & SECURITY (Server-Side Only)
# ============================================================================

# JWT Secret Key for access tokens (min 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-access-token-secret-minimum-32-characters-long"

# Refresh token secret (must be different from JWT_SECRET)
REFRESH_TOKEN_SECRET="your-refresh-token-secret-minimum-32-characters-long"

# JWT Token Expiration
# Access token lifetime (recommended: 15m)
JWT_EXPIRY="15m"

# Refresh token lifetime (recommended: 7-30 days)
REFRESH_TOKEN_EXPIRY="7d"

# ============================================================================
# REDIS CACHE (Server-Side Only)
# ============================================================================

REDIS_URL="redis://localhost:6379"

# ============================================================================
# EMAIL SERVICE (Server-Side Only)
# ============================================================================

SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# ============================================================================
# SMS SERVICE (Server-Side Only)
# ============================================================================

SMS_API_KEY="your-twilio-api-key"
SMS_API_SECRET="your-twilio-api-secret"
SMS_PHONE_NUMBER="+1234567890"

# ============================================================================
# FILE STORAGE (Server-Side Only)
# ============================================================================

AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
S3_BUCKET_NAME="hospital-queue-uploads"

# ============================================================================
# PUBLIC VARIABLES (Client-Accessible via NEXT_PUBLIC_ prefix)
# ============================================================================
# These variables are embedded in the browser bundle and visible to users

# Application Configuration
NEXT_PUBLIC_APP_NAME="WEQN Hospital Queue System"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NEXT_PUBLIC_API_URL="https://your-domain.com"
NEXT_PUBLIC_ENVIRONMENT="development"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_NOTIFICATIONS="true"

# ============================================================================
# APPLICATION (Server-Side Only)
# ============================================================================

NODE_ENV="development"

# ============================================================================
# SECURITY NOTES
# ============================================================================
#
# SERVER-SIDE ONLY (no NEXT_PUBLIC_ prefix):
# - Accessible ONLY in API routes and server components
# - Use for: database URLs, API keys, secrets, passwords
# - Access with: process.env.VARIABLE_NAME
# - NOT visible in browser
#
# CLIENT-SIDE (NEXT_PUBLIC_ prefix):
# - Embedded in browser JavaScript bundle
# - Anyone can see these values in DevTools
# - Use for: app name, public API URLs, feature flags
# - Access with: process.env.NEXT_PUBLIC_VARIABLE_NAME
#
# BEST PRACTICES:
# 1. Never commit .env.local to git (add to .gitignore)
# 2. Use different secrets for dev/staging/production
# 3. Rotate secrets regularly
# 4. Validate required variables at startup
# 5. Never log sensitive environment variables
#
# ============================================================================
